{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2016",
    "lib": [
      "dom",
      "es2016"
    ],
    "baseUrl": "./",
    "paths": {
        "skatejs": ["./"]
    },
    "typeRoots": [
      "definitions/"
    ],
    "types": [
      "w3c-customelements"
    ],
    "noImplicitAny": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noEmit": true,
    "jsx": "react",
    "jsxFactory": "skate.h",
    "pretty": true
  },
  "include": [
    "index.d.ts",
    "test/definitions/**/*.tsx"
  ]
}
