{
  "babel": {
    "env": {
      "es": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "esnext": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          "es2016",
          "es2017",
          "flow",
          "react",
          "stage-0"
        ]
      },
      "node": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "6.0.0"
              }
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "test": {
        "plugins": [
          "transform-decorators-legacy"
        ],
        "presets": [
          "env",
          "flow",
          "react",
          "stage-0"
        ]
      }
    }
  },
  "bolt": {
    "version": "^0.19.0",
    "workspaces": [
      "site",
      "packages/*"
    ],
    "releases": {
      "baseCommitUrl": "https://github.com/skatejs/skatejs/commits"
    }
  },
  "dependencies": {
    "babel-register": "6.26.0",
    "glob": "7.1.2",
    "highlight.js": "9.12.0",
    "jest-environment-node": "22.1.4",
    "js-beautify": "1.7.5",
    "lit-html": "0.9.0",
    "marked": "0.3.12",
    "mkdirp": "0.5.1",
    "outdent": "0.4.1",
    "page": "1.8.3",
    "parse5": "4.0.0",
    "preact": "8.2.7",
    "prismjs": "1.10.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "uglify-es": "3.3.9",
    "undom": "0.3.3",
    "yargs": "11.0.0",
    "yocss": "0.5.1"
  },
  "devDependencies": {
    "@skatejs/bore": "4.0.3",
    "@skatejs/val": "0.4.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-loader": "7.1.2",
    "babel-plugin-dynamic-import-node": "1.2.0",
    "babel-plugin-modules-map": "1.0.0",
    "babel-plugin-modules-web-compat": "1.1.1",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-skate-flow-props": "0.1.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015-rollup": "3.0.0",
    "babel-preset-es2016": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-flow": "6.23.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "bolt": "0.19.2",
    "eslint-plugin-flowtype": "2.42.0",
    "execa": "0.9.0",
    "file-loader": "1.1.6",
    "flow-bin": "0.64.0",
    "flow-copy-source": "1.2.2",
    "fs-extra": "5.0.0",
    "husky": "0.14.3",
    "img-loader": "2.0.1",
    "jest": "22.1.4",
    "jest-cli": "22.1.4",
    "jest-in-case": "1.0.2",
    "lint-staged": "6.1.0",
    "now": "9.2.7",
    "prettier": "1.10.2",
    "prettier-eslint": "8.8.1",
    "projector-cli": "3.0.1",
    "raw-loader": "0.5.1",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.11.1",
    "worker-loader": "1.1.0"
  },
  "name": "skatejs-monorepo",
  "private": true,
  "scripts": {
    "build": "projector ./projector babel --envs es,esnext,node",
    "dev": "cd site && webpack-dev-server --hot",
    "flow": "flow",
    "precommit": "lint-staged",
    "prepare": "bolt build",
    "site": "cd site && webpack -p",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "./packages/ssr/jest",
    "transformIgnorePatterns": []
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
