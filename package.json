{
  "babel": {
    "env": {
      "es": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          [
            "env",
            {
              "modules": false
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "esnext": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          "es2016",
          "es2017",
          "flow",
          "react",
          "stage-0"
        ]
      },
      "node": {
        "ignore": [
          "__tests__",
          "node_modules"
        ],
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "6.0.0"
              }
            }
          ],
          "flow",
          "react",
          "stage-0"
        ]
      },
      "test": {
        "presets": [
          "env",
          "flow",
          "react",
          "stage-0"
        ]
      }
    }
  },
  "bolt": {
    "version": "^0.17.0",
    "workspaces": [
      "site",
      "packages/*"
    ],
    "releases": {
      "baseCommitUrl": "https://github.com/skatejs/skatejs/commits"
    }
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "execa": "^0.8.0",
    "glob": "^7.1.2",
    "highlight.js": "^9.12.0",
    "jest-environment-node": "^21.1.0",
    "js-beautify": "^1.7.3",
    "lit-html": "^0.7.1",
    "mkdirp": "^0.5.1",
    "outdent": "^0.4.1",
    "page": "^1.7.1",
    "parse5": "^3.0.2",
    "preact": "^8.2.5",
    "prismjs": "^1.8.4",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "uglify-es": "^3.1.2",
    "undom": "^0.3.3",
    "yargs": "^9.0.1",
    "yocss": "^0.5.1"
  },
  "devDependencies": {
    "@skatejs/bore": "^4.0.0",
    "@skatejs/val": "^0.3.1",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.1.0",
    "babel-plugin-modules-map": "1.0.0",
    "babel-plugin-modules-web-compat": "^1.1.1",
    "babel-plugin-transform-skate-flow-props": "^0.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bolt": "^0.17.6",
    "eslint-plugin-flowtype": "^2.34.0",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.59.0",
    "flow-copy-source": "^1.2.1",
    "husky": "^0.13.3",
    "img-loader": "^2.0.0",
    "jest": "^20.0.4",
    "jest-cli": "^21.0.2",
    "jest-in-case": "^1.0.2",
    "lint-staged": "^4.0.2",
    "prettier": "1.8.2",
    "prettier-eslint": "^8.2.2",
    "projector-cli": "^3.0.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.49.3",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1",
    "typescript": "2.6.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "worker-loader": "^1.1.0"
  },
  "name": "skatejs-monorepo",
  "private": true,
  "scripts": {
    "build": "projector ./projector babel --envs es,esnext,node",
    "dev": "cd site && webpack-dev-server --hot",
    "flow": "./node_modules/.bin/flow",
    "precommit": "lint-staged",
    "prepare": "bolt build",
    "site": "cd site && webpack -p",
    "test": "bolt test:js && bolt test:ts",
    "test:js": "jest",
    "test:ts": "projector ./projector ts"
  },
  "jest": {
    "testEnvironment": "./packages/ssr/jest",
    "transformIgnorePatterns": []
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
